zone "{{ domain }}" {
    type master;
    file "/etc/bind/zones/db.{{ domain }}"; # zone file path
    allow-transfer { {{ ns2IP }}; };           # ns2 private IP address - secondary
};

zone "{{ IPArpa }}.in-addr.arpa" {
    type master;
    file "/etc/bind/zones/db.{{ reverseIPArpa }}";  # 10.128.0.0/16 subnet
    allow-transfer { {{ ns2IP }}; };  # ns2 private IP address - secondary
};
